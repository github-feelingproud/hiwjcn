@using Lib.core;
@using Lib.helper;

@using Lib.helper;
@using Bll;
@using Model;
@using Model.Post;
@using Model.Sys;
@using Model.User;
@using Hiwjcn.Web.Models.Page;
@using WebLogic.Model.Page;
@{
    Layout = null;
}

<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
          "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <!-- header page -->
    @Html.Partial(IncludePath("header"))
</head>

<body>
    @Html.Partial(IncludePath("body_top"))
    <!--导航-->
    @Html.Partial(IncludePath("nav"))

    <div class="container" style="margin-top:20px;">
        <div class="row">
            <div class="col-md-12">
                <div class="box">
                    <p>
                        <span class="label label-primary">@(Lang("news"))</span>
                    </p>
                    @{
                        var list = ViewData["list"] as List<SectionModel>;
                        if (ValidateHelper.IsPlumpList(list))
                        {
                            <table class="table table-hover table-responsive">
                                <thead>
                                    <tr>
                                        <td style="width:80%;"></td>
                                        <td style="width:20%;"></td>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var model in list)
                                    {
                                        <tr>
                                            <td>
                                                <a href="/page/show/@(model.SectionName)/" target="_blank">@(model.SectionTitle)</a>
                                            </td>
                                            <td>@(model.UpdateTime)</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <div class="right">
                                @(Html.Raw(ViewData["pager"]))
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-info">没有新闻</div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>

    @Html.Partial(IncludePath("footer"))
    @Html.Partial(IncludePath("body_bottom"))
</body>
</html>
